generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String   @id @default(uuid())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  email             String   @unique
  username          String   @unique
  password          String
  avatar            String?
  bio               String?
  lastSeen          DateTime   @default(now())
  refreshToken      String?
  isActivated       Boolean @default(false)
  // status            UserStatus @default(OFFLINE): Store this in Redis

  posts             Post[]
  comments          Comment[]
  likes             Like[]

  sentRequests      Friendship[]  @relation(name: "SentRequests")
  receivedRequests  Friendship[]  @relation(name: "ReceivedRequests")

  ownedServers      Server[]
  memberships       Member[]
}

model Friendship {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  status       FriendshipStatus @default(PENDING)

  requester    User     @relation(name: "SentRequests", fields: [requesterId], references: [id])
  requesterId  String

  receiver     User     @relation(name: "ReceivedRequests", fields: [receiverId], references: [id])
  receiverId   String

  @@unique([requesterId, receiverId]) // Prevent duplicate requests
}

model Post {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  author     User     @relation(fields: [authorId], references: [id])
  authorId   String
  
  content    String
  attachments Attachment[]

  comments   Comment[]
  likes      Like[]
}

model Comment {
  id         String    @id @default(uuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  author     User      @relation(fields: [authorId], references: [id])
  authorId   String
  post       Post      @relation(fields: [postId], references: [id])
  postId     String
 
  parentId   String?
  parent     Comment?  @relation(name: "CommonReplies", fields: [parentId], references: [id])
  replies    Comment[] @relation(name: "CommonReplies")

  content    String
  mediaUrls  String[] @default([])
  likes      Like[]
}

model Like {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
  userId      String

  post        Post?    @relation(fields: [postId], references: [id])
  postId      String?
  comment     Comment? @relation(fields: [commentId], references: [id])
  commentId   String?
  // Validation: In Like service, handle a Like to not exist for both a Post and a Comment simultaneously
  // Prisma cannot enforce "XOR" in the schema easily

  targetType  TargetLikeType

  @@unique([postId, userId]) // Prevent duplicate likes
  @@unique([commentId, userId])
}

model Server {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  name      String
  iconUrl   String?

  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String

  channels  Channel[]
  members   Member[]
  roles     Role[]
}

model Channel {
  id        String   @id @default(uuid())
  name      String
  type      ChannelType

  server    Server   @relation(fields: [serverId], references: [id])
  serverId  String

  messages  Message[]
  attachments Attachment[]
}

model Member {
  id        String   @id @default(uuid())
  joinedAt  DateTime @default(now())
  nickname  String?
  isMuted   Boolean  @default(false)

  user      User     @relation(fields: [userId], references: [id])
  userId    String

  server    Server   @relation(fields: [serverId], references: [id])
  serverId  String

  roles     Role[]   @relation("MemberRoles")
  messages  Message[]

  @@unique([userId, serverId]) // User can only be in a server once
}

model Role {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  name      String
  position  Int      @default(0) // Ascending hierarchy

  server    Server   @relation(fields: [serverId], references: [id])
  serverId  String

  members   Member[] @relation("MemberRoles")
  permissions Permission[] @relation("RolePermissions")

  @@unique([name,serverId])
}

model Permission {
  id        String   @id @default(uuid())
  code      String   @unique()

  roles     Role[]   @relation("RolePermissions")
}

model Message {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  content     String?
  attachments Attachment[]
  deleted     Boolean  @default(false)

  replyToId   String?
  replyTo     Message?  @relation("Reply", fields: [replyToId], references: [id])
  replies     Message[] @relation("Reply")

  channel     Channel  @relation(fields: [channelId], references: [id])
  channelId   String

  sender      Member   @relation(fields: [memberId], references: [id])
  memberId    String

  @@index([channelId, createdAt])
}

model Attachment {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  url       String
  publicId  String
  type      AttachmentType
  filename  String
  mimeType  String
  size      Int

  // Belongs to a Message (Discord side)
  message   Message? @relation(fields: [messageId], references: [id], onDelete: Cascade)
  messageId String?
  channel   Channel? @relation(fields: [channelId], references: [id], onDelete: Cascade)
  channelId String?

  // Belongs to a Post (Facebook side)
  post      Post?    @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    String?
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  BLOCKED
}

enum TargetLikeType {
  POST
  COMMENT
}

enum ChannelType {
  TEXT
  VOICE
}

enum AttachmentType {
  IMAGE
  VIDEO
  AUDIO
  FILE
}
